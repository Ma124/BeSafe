  %head
    %title BeSafe! - Random
    %include _head.haml
    %script{:src => "random-int.js"}
  %body
    %include _navbar.haml
    %main
      %section.hero.is-primary.is-bold
        .hero-body
          .container
            %h1.title BeSafe!
            %h2.subtitle Random - Integer
      %section.section
        .container
          .field
            %label.label Source
            .control
              .select
                %select#rng-src
                  %option{:selected => true} Random.org (True)
                  %option{:disabled => true} XorShift (Pseudo)
                  %option{:disabled => true} Fortuna (Secure)
          .field
            %label.label Number of integers
            .control
              %input.input#n{:type => "number", :min => 0, :max => 10000, :value => 100}
          %label.label Minimum and Maximum
          .field.has-addons
            .control
              %input.input#min{:type => "number", :min => -1000000000, :max => 1000000000, :value => 0}
            .control
              %input.input#max{:type => "number", :min => -1000000000, :max => 1000000000, :value => 100}
          .container
            %a.button.is-primary{:onclick => "gen()"} Generate
            %label.label{:style => "padding-top: 20px;"} Random integers
            #ints


